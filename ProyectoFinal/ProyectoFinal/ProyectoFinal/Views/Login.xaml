<?xml version="1.0" encoding="utf-8" ?>   
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Fonts_ico ="clr-namespace:ProyectoFinal.Fonts"
             x:Class="ProyectoFinal.Views.Login" >
    
    <ContentPage.Content>
        <StackLayout>
            <StackLayout.Background>
                <LinearGradientBrush EndPoint="5,0">
                    <GradientStop Color="#F7D59C" Offset="0"></GradientStop>
                    <GradientStop Color="#DED9C4" Offset="0.15"></GradientStop>
                </LinearGradientBrush>
            </StackLayout.Background>
            <StackLayout>
        
            <StackLayout Margin="20,20,0,0" Spacing="30">
            
                    <Label FontFamily="icons" Text="{x:Static Fonts_ico:Fonts.User}" FontSize="150"
                           HorizontalOptions="Center" TextColor="#eeeeee"></Label>
                    <Label Style="{StaticResource lblTitle}" Text="Bienvenido de vuelta" FontAttributes="Bold"></Label>
                    <Label Text="Ingrese para continuar" TextColor="Gray" HorizontalOptions="Center"></Label>
                </StackLayout>

                <StackLayout Margin="58,0,0,0">
                    <StackLayout Orientation="Horizontal">
                        <Label FontFamily="icons" Text="{x:Static Fonts_ico:Fonts.Mail}" FontSize="20"
                           TextColor="#757575" VerticalOptions="Center"></Label>
                        <Entry BackgroundColor="#e0e0e0" WidthRequest="200" HeightRequest="35" FontSize="Small"
                               Placeholder="Ingrese su email" Keyboard="Email" TextColor="black"></Entry>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label FontFamily="icons" Text="{x:Static Fonts_ico:Fonts.Lock}" FontSize="30"
                           TextColor="#757575" VerticalOptions="Center"></Label>
                        <Entry BackgroundColor="#e0e0e0" WidthRequest="200" HeightRequest="35" FontSize="Small"
                               Placeholder="Ingrese su contraseña" IsPassword="True" TextColor="black"></Entry>
                    </StackLayout>
                    <StackLayout Margin="0,0,56,0" Spacing="50">
                        <Label Style="{StaticResource lblLink}" Text="Olvido su contraseña?" HorizontalOptions="End"
                               TextDecorations="Underline"></Label>
                        <Button Text="Iniciar Sesión" Clicked="Button_Clicked"></Button>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Margin="0,0,56,0">
                        <Label Text="No tienes cuenta?"  FontSize="13.5"></Label>
                        <Label>
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Style="{StaticResource lblLink}" Text="Create una nueva" FontSize="13.5" 
                                          TextDecorations="Underline">
                                        <Span.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"></TapGestureRecognizer>
                                        </Span.GestureRecognizers>
                                    </Span>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </StackLayout>
                
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>